<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <LinearLayout
        android:id="@+id/layout_isroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/but_isroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        </LinearLayout>
    </ScrollView>


 
       <Button
           android:id="@+id/btn_map"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:textSize="20sp"
           android:text="View on map" 
           />

       <Button
           android:id="@+id/read_xml"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/layout_isroom"
           android:text="Load Data" />

       <Button
           android:id="@+id/save_data"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/read_xml"
           android:layout_alignBottom="@+id/read_xml"
           android:layout_toRightOf="@+id/read_xml"
           android:text="Save"
           android:visibility="visible" />

       <Button
           android:id="@+id/check_data"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/layout_isroom"
           android:layout_toRightOf="@+id/save_data"
           android:text="Start"
           android:visibility="visible" />

       <TextView
           android:id="@+id/tv_jisuan_result"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_below="@+id/read_xml"
           android:layout_margin="5dp"
           android:layout_marginTop="24dp"
           android:text="Show results [Press start]"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/tv_now_wifi"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/tv_jisuan_result"
           android:layout_margin="5dp"
           android:text="Current wifi info[Press start]"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/tv_read_result"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/tv_now_wifi"
           android:text="read database and showï¼š" />

       <Button
           android:id="@+id/pause"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/check_data"
           android:layout_alignBottom="@+id/check_data"
           android:layout_toRightOf="@+id/check_data"
           android:text="Pause" />

</RelativeLayout>